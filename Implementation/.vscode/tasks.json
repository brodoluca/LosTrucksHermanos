{
    "tasks": [
        {
            "type": "shell",
            "label": "Clang++ build",
            "command": "/usr/local/opt/llvm/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "-fopenmp",
                "${file}",
                "${fileDirname}/src/**.cpp",
                "${fileDirname}/src/utils/**.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
        },

    ],
    "version": "2.0.0"
}